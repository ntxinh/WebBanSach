@model Vinabook.Models.Sach
@{
    ViewBag.Title = "ChinhSua";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Chỉnh sửa sách</h2>
@using (Html.BeginForm("ChinhSua", "QuanLySach", FormMethod.Post, new { @enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.MaSach, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @*<span style="font-size:15pt;margin-top:2px;margin-left:5px">@Model.MaSach</span>*@
                @Html.EditorFor(model => model.MaSach, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.Hidden("MaSach", Model.MaSach)
            </div>
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.TenSach, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenSach)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GiaBan, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaBan)
            </div>
        </div>


        
        <div class="form-group">
            @Html.LabelFor(model => model.NgayCapNhat, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.NgayCapNhat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayCapNhat)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.AnhBia, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @* lay ten anh trong database cho feild AnhBia (tránh trường hợp không thêm ảnh mới) *@
                <input id="AnhBia" name="AnhBia" type="text" value="@Model.AnhBia" class="hidden">
                @*@Html.EditorFor(model => model.AnhBia)
                @Html.ValidationMessageFor(model => model.AnhBia)
                <img src="@Url.Content("~/Content/HinhAnhSP/"+Model.AnhBia)" width="40" height="40" />*@
                <div class="fileinput fileinput-new" data-provides="fileinput" style="height:150px">
                    <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px">
                        <img src="@Url.Content("~/Content/HinhAnhSP/" + Model.AnhBia)">
                    </div>
                    <div class="pull-right" style="margin-left:5px;">
                        <span class="btn btn-default btn-file">
                            <span class="fileinput-new">Change</span>
                            <span class="fileinput-exists">
                                Change
                            </span>
                            <input id="fileUpload" type="file" name="fileUpload">
                        </span>
                        @*<a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>*@
                    </div>
                </div>


            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SoLuongTon, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuongTon)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaChuDe, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.DropDownList("MaChuDe", (SelectList)ViewBag.MaChuDe, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaNXB, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.DropDownList("MaNXB", (SelectList)ViewBag.MaNXB, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Moi, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @{if (ViewBag.Moi == 1)
                    {
                        <input type="radio" name="Moi" id="Moi" value="1" checked /><span>Mới</span><br />
                        <input type="radio" name="Moi" id="Moi" value="0" /><span>Không</span>
                    }
                    else
                    {
                        <input type="radio" name="Moi" id="Moi" value="1" /><span>Mới</span><br />
                        <input type="radio" name="Moi" id="Moi" value="0" checked /><span>Không</span>
                        }
                    }
                @*@Html.EditorFor(model => model.Moi)
                @Html.ValidationMessageFor(model => model.Moi)*@
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MoTa, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                <textarea name="MoTa" class="form-control">@Model.MoTa</textarea>
                @*@Html.Raw(Model.MoTa)*@
                @*@Html.TextAreaFor(model => model.MoTa)*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-6">
                <input type="submit" value="Lưu" class="btn btn-warning" />
            </div>
        </div>


    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


